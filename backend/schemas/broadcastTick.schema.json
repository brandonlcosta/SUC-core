{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BroadcastTick",
  "description": "Represents one broadcast tick, containing all active overlays",
  "type": "object",
  "properties": {
    "overlays": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["event_id", "overlay_type", "priority", "timestamp"],
        "properties": {
          "event_id": { "type": "string" },
          "overlay_type": { "type": "string" },
          "athlete_ids": {
            "type": "array",
            "items": { "type": "string" }
          },
          "sponsor_slot": { "type": ["string", "null"] },
          "priority": { "type": "number" },
          "timestamp": { "type": "number" }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["overlays"],
  "additionalProperties": false
}
