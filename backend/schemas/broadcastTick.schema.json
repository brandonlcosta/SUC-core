{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SUC-core Broadcast Tick",
  "type": "object",
  "properties": {
    "ts": { "type": "number" },
    "mode": {
      "type": "object",
      "properties": {
        "current": { "type": "string" }
      },
      "additionalProperties": true
    },
    "ticker": { "type": "string" },
    "hud": { "type": "object", "additionalProperties": true },
    "highlights": {
      "type": "array",
      "items": { "type": "object", "additionalProperties": true }
    },
    "recap": { "type": "object", "additionalProperties": true },
    "operator_overrides": {
      "type": "object",
      "properties": {
        "skip_bumper": { "type": ["boolean", "null"] },
        "pinned_arc": { "type": ["string", "null"] },
        "replay": { "type": ["object", "null"], "additionalProperties": true },
        "muted_roles": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "required": ["ts", "ticker", "hud", "highlights", "recap"],
  "additionalProperties": true
}
