{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Leaderboard Schema",
  "type": "object",
  "properties": {
    "leaderboard": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athleteId": { "type": "string" },
          "points": { "type": "number" },
          "laps": { "type": "integer" }
        },
        "required": ["athleteId", "points", "laps"]
      }
    }
  },
  "required": ["leaderboard"]
}
