{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://suc-core/schemas/operatorControls.schema.json",
  "title": "Operator Overrides",
  "type": "object",
  "properties": {
    "skip_bumper": { "type": ["boolean", "null"] },
    "pinned_arc": { "type": ["string", "null"] },
    "replay": {
      "type": ["object", "null"],
      "properties": {
        "clip_id": { "type": "string" },
        "start_ms": { "type": "number" },
        "end_ms": { "type": "number" }
      },
      "required": ["clip_id", "start_ms", "end_ms"],
      "additionalProperties": true
    },
    "muted_roles": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "additionalProperties": false
}