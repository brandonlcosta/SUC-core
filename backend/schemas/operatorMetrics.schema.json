{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Operator Metrics",
  "type": "object",
  "required": ["ts", "action", "target", "operatorId"],
  "properties": {
    "ts": { "type": "number" },
    "action": {
      "type": "string",
      "enum": ["SKIP_BUMPER", "PIN_ARC", "REPLAY", "MUTE_ROLE"]
    },
    "target": { "type": "string" },
    "operatorId": { "type": "string" }
  },
  "additionalProperties": false
}
