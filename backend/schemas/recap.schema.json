{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recap",
  "type": "object",
  "properties": {
    "session_id": { "type": "string" },
    "laps_summary": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "runner": { "type": "string" },
          "laps": { "type": "integer" }
        },
        "required": ["runner", "laps"]
      }
    },
    "highlight_reel": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["laps_summary", "highlight_reel"]
}
