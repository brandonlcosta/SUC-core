{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recap Schema",
  "type": "object",
  "properties": {
    "laps_summary": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athleteId": { "type": "string" },
          "laps": { "type": "integer", "minimum": 0 }
        },
        "required": ["athleteId", "laps"]
      }
    },
    "dnf_log": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athleteId": { "type": "string" },
          "timestamp": { "type": "integer" }
        },
        "required": ["athleteId", "timestamp"]
      }
    },
    "highlight_reel": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "athletes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "timestamp": { "type": "integer" }
        },
        "required": ["type", "timestamp"]
      }
    }
  },
  "required": ["laps_summary", "dnf_log", "highlight_reel"]
}
