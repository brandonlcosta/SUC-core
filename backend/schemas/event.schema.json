{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SUC Unified Event Schema",
  "type": "object",
  "required": ["event_type", "timestamp", "source", "quality"],
  "properties": {
    "event_type": {
      "type": "string",
      "enum": [
        "lap_completed",
        "sector_ping",
        "projected_position",
        "highlight_reel",
        "health_ping"
      ]
    },
    "runner_id": {
      "type": ["string", "null"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "location": {
      "type": "object",
      "properties": {
        "checkpoint_id": { "type": ["string", "null"] },
        "lat": { "type": ["number", "null"] },
        "lon": { "type": ["number", "null"] },
        "sector_name": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "source": {
      "type": "object",
      "required": ["system", "device_id"],
      "properties": {
        "system": { "type": "string" },
        "device_id": { "type": "string" },
        "signal_strength": { "type": ["integer", "null"] },
        "method": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "quality": {
      "type": "object",
      "required": ["confidence", "priority", "trust_level"],
      "properties": {
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "priority": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "trust_level": {
          "type": "string",
          "enum": ["truth", "soft", "projection"]
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "ingested_at": { "type": "string", "format": "date-time" },
        "note": { "type": "string" },
        "battery_level": { "type": ["number", "null"] },
        "packet_count": { "type": ["number", "null"] },
        "temperature": { "type": ["number", "null"] }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
