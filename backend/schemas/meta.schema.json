{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta Schema",
  "type": "object",
  "properties": {
    "streaks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athleteId": { "type": "string" },
          "laps": { "type": "integer" },
          "timestamp": { "type": "integer" }
        },
        "required": ["athleteId", "laps", "timestamp"]
      }
    },
    "rivalries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athletes": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 2,
            "maxItems": 2
          },
          "timestamp": { "type": "integer" }
        },
        "required": ["athletes", "timestamp"]
      }
    },
    "projections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athleteId": { "type": "string" },
          "expected_next": { "type": "integer" }
        },
        "required": ["athleteId", "expected_next"]
      }
    }
  },
  "required": ["streaks", "rivalries", "projections"]
}
