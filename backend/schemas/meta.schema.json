{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta",
  "type": "object",
  "properties": {
    "rivalries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athlete_ids": { "type": "array", "items": { "type": "string" } },
          "gap_seconds": { "type": "number" },
          "priority": { "type": "integer" }
        },
        "required": ["athlete_ids", "gap_seconds"]
      }
    },
    "projections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "athlete_id": { "type": "string" },
          "projected_finish": { "type": "number" },
          "confidence": { "type": "string" }
        },
        "required": ["athlete_id", "projected_finish"]
      }
    },
    "highlights": {
      "type": "array",
      "items": { "type": "object" }
    }
  },
  "required": ["rivalries", "projections", "highlights"]
}
