{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scoring Tick",
  "type": "object",
  "required": ["ts", "leaderboard"],
  "properties": {
    "ts": { "type": "number" },
    "leaderboard": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "score"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "score": { "type": "number" }
        }
      }
    }
  },
  "additionalProperties": false
}
