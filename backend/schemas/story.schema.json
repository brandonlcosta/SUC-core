{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Story",
  "type": "object",
  "properties": {
    "arcs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "athlete_ids": {
            "type": "array",
            "items": { "type": "string" }
          },
          "priority": { "type": "integer" }
        },
        "required": ["type", "athlete_ids"]
      }
    }
  },
  "required": ["arcs"]
}
