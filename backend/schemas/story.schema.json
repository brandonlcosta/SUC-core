{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Story Schema",
  "type": "object",
  "properties": {
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "summary": { "type": "string" },
          "timestamp": { "type": "integer" }
        },
        "required": ["type", "summary", "timestamp"]
      }
    }
  },
  "required": ["stories"]
}
