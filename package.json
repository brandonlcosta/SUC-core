{
  "name": "suc-core",
  "version": "1.0.0",
  "description": "Sports Update Core system with tick engine, demo server, and frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.js",
    "build": "vite build --config vite.config.js",
    "preview": "vite preview --config vite.config.js",

    "ws:ticks": "node backend/server/demoServer.js",
    "demo:map": "node tests/demoMapEvents.js",

    "dev:all": "concurrently \"npm run ws:ticks\" \"npm run dev\"",
    "dev:all:demo": "concurrently \"npm run ws:ticks\" \"npm run demo:map\" \"npm run dev\"",

    "dev:harness": "node tests/harnessRunner.js",
    "validate": "node tests/schemaValidator.js",
    "test:all": "npm run dev:harness && npm run validate",
    "test:watch": "nodemon --watch backend --watch tests --ext js,json --exec \"npm run test:all\"",

    "clean": "rimraf backend/outputs/*"
  },
  "dependencies": {
    "@turf/helpers": "^7.2.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "framer-motion": "^12.23.14",
    "mapbox-gl": "^3.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0",
    "nodemon": "^3.1.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.6.0"
  }
}
