{
  "name": "rfid-preset",
  "source": "rfid",
  "transform": { "defaults": { "type": "checkpoint" } },
  "mappings": {
    "id":        { "path": "tagReadId",    "fn": "string" },
    "ts":        { "path": "readTs",       "fn": "dateIso" },
    "type":      { "path": "eventType",    "fn": "string" },
    "athleteId": { "path": "bib",          "fn": "string" },
    "score":     { "path": "qualityScore", "fn": "number" },
    "payload":   { "path": "raw" }
  }
}
