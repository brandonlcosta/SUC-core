{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta Event Schema V2",
  "type": "object",
  "properties": {
    "event_id": { "type": "string" },
    "vibe_score": { "type": "number", "minimum": 0 },
    "beat_role": { "type": "string", "enum": ["impact", "echo", "chaos"] },
    "sponsor_slot": { "type": ["string", "null"] },
    "timestamp": { "type": "number" }
  },
  "required": ["event_id", "vibe_score", "beat_role", "timestamp"]
}
